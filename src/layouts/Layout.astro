---
import '@fontsource-variable/rubik'
import { ViewTransitions } from 'astro:transitions'
import Background from '@/components/layout/Background.astro'
import Footer from '@/components/layout/Footer.astro'
import HamburgerMenu from '@/components/layout/HamburgerMenu.astro'
import Header from '@/components/layout/Header.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Técnico Superior en Informática y actualmente curso el quinto semestre de la carrera de Tecnologías de la Información en UTEC. A lo largo de mi formación, he utilizando tecnologías como Astro, Next.js, Node.js, JavaEE, JavaServer Pages, SQL Developer y MongoDB.'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Background />
    <HamburgerMenu />
    <div id='app' class='md:max-w-[1550px] xl:max-w-[1650px] mx-auto sombra'>
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --color-primary: #e3f7eb;
    --color-secondary: #fff;
    --color-tertiary: #0dbc5c;
    --background-image: #eff2f8;
  }

  html {
    font-family: 'Rubik Variable', system-ui, sans-serif;
    overflow-x: hidden;
  }

  @media screen and (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  #app {
    width: 100%;
    min-height: 100vh;
    display: grid;
    grid-template-areas: 'header' 'main' 'footer';
    grid-template-rows: auto 1fr auto;
  }

  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: theme('colors.primary');
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-image);
  }

  ::-webkit-scrollbar-corner {
    background: var(--background-image);
  }
  .sombra {
    filter: drop-shadow(-2px 0px 5px rgba(0, 0, 0, 0.2));
  }
</style>
