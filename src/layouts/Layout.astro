---
import '@fontsource-variable/rubik'
import { ViewTransitions } from 'astro:transitions'
import Background from '@/components/layout/Background.astro'
import Footer from '@/components/layout/Footer.astro'
import HamburgerMenu from '@/components/layout/HamburgerMenu.astro'
import Header from '@/components/layout/Header.astro'
import SEO from '@/components/utils/SEO.astro'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <SEO title={title} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <Background />
    <HamburgerMenu />
    <div id='app' class='max-w-none lg:max-w-[95vw] xl:max-w-[1400px] xlbig:max-w-[1500px] xlmax:max-w-[1700px] mx-auto sombra'>
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --color-primary: #e3f7eb;
    --color-secondary: #fff;
    --color-tertiary: #4682B4;
    --color-fourth:#0DBC5C;
    --background-image: #eff2f8;
  }

  html {
    font-family: 'Rubik Variable', system-ui, sans-serif;
    overflow-x: hidden;
  }

  @media screen and (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  #app {
    width: 100%;
    min-height: 100vh;
    display: grid;
    grid-template-areas: 'header' 'main' 'footer';
    grid-template-rows: auto 1fr auto;
  }

  ::-webkit-scrollbar {
    width: 10px;
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background-color: theme('colors.fourth');
    border: 2px solid transparent;
    background-clip: content-box;
  }

  ::-webkit-scrollbar-track {
    background: var(--background-image);
  }

  ::-webkit-scrollbar-corner {
    background: var(--background-image);
  }
  .sombra {
    filter: drop-shadow(-2px 0px 5px rgba(0, 0, 0, 0.2));
  }

  .sombra-low {
    filter: drop-shadow(-2px 0px 5px rgba(43, 42, 42, 0.1));
  }

  .gradient-text {
    font-weight: bold; /* Puedes ajustar el peso de la fuente */
    background: linear-gradient(
      to right,
      #22c55e,
      #059669
    ); /* Degradado de fondo */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
    transition: background 0.3s ease-in-out; /* Transici√≥n para hover */
  }
</style>
