---
import Medal from '../icons/Medal.astro'
import InfoItem from './InfoItem.astro'
import { informations } from '@/lib/index.ts'
---

<section id='reconocimientos-y-logros'>
  <h2
    class='text-3xl font-bold sm:text-4xl text-[#0DBC5C] text-center py-10 flex items-center justify-center gap-x-2 animacion'
  >
    <Medal class='w-7 h-7 sm:w-9 sm:h-9' />
    Reconocimientos y logros
  </h2>

  <div
    class='grid lg:grid-cols-2 xlbig:grid-cols-3 py-5 w-full gap-y-20 md:gap-x-6 xl:gap-x-8 place-content-center place-items-center'
  >
    {
      informations.map((info) => {
        return <InfoItem {...info} />
      })
    }
  </div>
</section>
<style>
  .sombra {
    filter: drop-shadow(-2px 0px 5px rgba(0, 0, 0, 0.1));
  }
</style>
