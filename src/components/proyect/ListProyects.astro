---
import { proyects } from "@/lib/index.ts";
import ProyectoItem from "./ProyectItem.astro";
---

<div
  class="grid lg:grid-cols-2 xlbig:grid-cols-3 py-5 w-full gap-y-20 md:gap-x-6 xl:gap-x-8 place-content-center place-items-center pb-20"
>
  {
    proyects.map(
      ({
        title,
        description,
        image,
        url,
        repository,
        online,
        resumen,
        technologies,
      }) => {
        return (
          <ProyectoItem
            title={title}
            description={description}
            resumen={resumen}
            image={image}
            repository={repository}
            online={online}
            url={url}
            technologies={technologies}
          />
        );
      }
    )
  }
</div>
