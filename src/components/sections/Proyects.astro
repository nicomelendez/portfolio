---
import Code from '@/components/icons/Code.astro'
import { proyects } from "@/lib/index.ts";
import ListCard from '../card/ListCard.astro'
---

<section id='proyectos' class='w-full py-10 bg-secondary px-5 md:px-24'>
  <h2
    class='text-4xl xl:text-5xl font-bold sm:text-4xl text-fourth text-center py-10 flex items-center justify-center gap-x-2 sombra-low'
  >
    <Code class='w-7 h-7 sm:w-10 sm:h-10' />
    Proyectos
  </h2>

  <ListCard list={proyects} type="proyects"/>
</section>
